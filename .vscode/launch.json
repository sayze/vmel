{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Vmel Dbg",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/bin/debug/vmel",
            "preLaunchTask": "build",
            "internalConsoleOptions": "openOnSessionStart",
            "args": ["test-data/run.vml"],
            "cwd": "${workspaceRoot}",
            "osx": {
                "MIMode": "lldb"
            }
		},
		{
            "name": "Vmel valgrind dbg",
            "type": "lldb",
            "request": "launch",
			"program": "valgrind",
            "preLaunchTask": "build",
            "internalConsoleOptions": "openOnSessionStart",
            "args": [
				" --leak-check=full",
				"--show-leak-kinds=all",
				"${workspaceRoot}/bin/debug/vmel"
				,"test-data/run.vml"
			],
            "cwd": "${workspaceRoot}",
            "osx": {
                "MIMode": "lldb"
            }
        }
    ]
}